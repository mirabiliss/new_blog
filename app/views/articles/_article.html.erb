<article class="post">
  <section class="post-head">
    <h2><%= link_to article.title, article %></h2>
    <small>
      <time><%= article.created_at.strftime("%d, %B, %Y") %></time>
      |
      <%= link_to 'Edit', edit_article_path(article) %>
      |
      <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
  </section>
  <section class="post-summary clearfix">
    <%= image_tag article.image.url(:thumb), class: 'img-thumbnail thumb' if article.image? %>
    <%= article.body %>
  </section>
  <section class="footer-summary">
    <% if not article.tags.empty? %> Tags: <% end %>
    <%= raw article.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'btn btn-outline-secondary btn-sm' }.join(' ') %>
  </section>
</article>
